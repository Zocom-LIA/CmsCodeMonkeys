    </div>
}
else
{
    <div class="user-view">
        @if (ShowReturnButton)
        {
            <div class="backbutton">
                    @* TODO: Fix the html anchor/button *@
                    <a href="javascript:history.back()"><button>GÃ¥ tillbaka</button></a>
                </div>
        }
        <StatusMessage />

        @if (UserViewHeader != null)
        {
